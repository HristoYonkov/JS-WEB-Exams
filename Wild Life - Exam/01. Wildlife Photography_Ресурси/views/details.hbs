<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Title: {{model.title}}</h1>
                <h3>Created by an author: {{authorName}}</h3>
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{model.keyword}}</p>
                    <p class="card-location">Location: {{model.location}}</p>
                    <p class="card-date">Date: {{model.date}}</p>
                </div>

                <p class="disc">Description: {{model.description}}</p>

                <!-- If there is no registered user, do not display buttons-->
                {{#if user}}
                    <div class="social-btn">
                        <!-- Only for registered user and author of the post -->
                        {{#if model.isAuthor}}
                            <a href="/model/edit/{{model._id}}" class="edit-btn">Edit</a>
                            <a href="/model/delete/{{model._id}}" class="del-btn">Delete</a>
                        
                        {{else}}
                            <!-- logged in users, who have not yet voted-->
                            {{#if model.isVoted}}
                                <p class="thanks-for-vote">Thanks For Voting</p>
                            {{else}}
                                <a href="/model/voteUp/{{model._id}}" class="vote-up">UpVote +1</a>
                                <a href="/model/voteDown/{{model._id}}" class="vote-down">DownVote -1</a>
                                <!-- logged in user who has already voted-->
                            {{/if}}
                        {{/if}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{model.image}}" alt="image">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                    <p class="PV">Total rating of votes: {{model.rating}}</p>
                </div>
                <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                <!-- <p class="disc">People who voted for the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->

                <!-- If not display: -->
                <p class="disc">People who voted for the post - No one has voted yet.</p>
            </div>
        </div>
    </div>
</section>