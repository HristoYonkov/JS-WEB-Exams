<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{model.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{model.name}}</h1>
                <h3 id="payment">Payment method: {{model.payMethod}}</h3>
                <p id="price"><span>Price: ${{model.price}}</span></p>
                <p id="description">{{model.description}}</p>
            </div>
            <div class="product-btn">
                {{#if user}}
                    {{#if model.isOwner}}
                        <div class="author">
                            <a href="/model/edit/{{model._id}}" class="btn-edit">Edit</a>
                            <a href="/model/delete/{{model._id}}" class="btn-delete">Delete</a>
                        </div>
                    {{else}}
                        {{#if model.isBuyed}}
                            <p class="buy-message">You already bought these crypto coins.</p>
                        {{else}}
                            <a href="/model/buy/{{model._id}}" class="btn-buy">Buy</a>
                        {{/if}}
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>